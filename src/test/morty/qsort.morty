
# https://en.wikipedia.org/wiki/Quicksort

def swap-arr ( a x y -- ) :y :x :a
	a x .get (X)
	a y .get (X Y) a x .set
	(X) a y .set
end

def partition ( a lo hi -- ii ) :hi :lo :a
	a hi .get :pivot
	lo :ii
	hi lo 1 for
		a i .get pivot lt then
			a ii i swap-arr
			ii 1 add :ii
		do
	loop
	a ii hi swap-arr
	ii
end

def qsort ( a lo hi -- ) :hi :lo :a
	lo hi lt then
		a lo hi partition :p
		a lo p 1 sub qsort
		a p 1 add hi qsort
	do
end

